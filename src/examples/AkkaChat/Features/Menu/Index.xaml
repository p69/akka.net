<local:IndexBase
    x:Class="AkkaChat.Features.Menu.Index"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AkkaChat.Features.Menu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:item="using:AkkaChat.Features.Menu.Item"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Gray">
       <ItemsControl ItemsSource="{x:Bind Vm.Items, Mode=OneWay}">
           <ItemsControl.ItemTemplate>
               <DataTemplate x:DataType="item:IMenuItemVm">
                   <item:MenuItem Vm="{x:Bind '', Mode=OneWay}"/>
               </DataTemplate>
           </ItemsControl.ItemTemplate>
       </ItemsControl>
    </Grid>
</local:IndexBase>
